{
  "name": "mcp-poc",
  "version": "1.0.0",
  "description": "UI augmentation for Model Context Protocol (MCP) servers",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "start": "pnpm --filter @mcp-poc/mcp-server start",
    "mcp-server:dev": "pnpm --filter @mcp-poc/mcp-server dev",
    "mcp-client:dev": "pnpm --filter @mcp-poc/mcp-client dev",
    "dev": "pnpm concurrently \"pnpm --filter @mcp-poc/mcp-server dev\" \"pnpm mcp-client:dev\" --names \"MCP_SERVER,MCP_CLIENT\" --prefix-colors \"blue,green\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@mcp-ui/server": "^5.12.0"
  }
}
